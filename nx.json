{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "targetDefaults": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "productionBuild"
      ],
      "outputs": [
        "{projectRoot}/dist"
      ],
      "cache": true
    },
    "prepare": {
      "dependsOn": [
        "^prepare"
      ],
      "cache": true
    },
    "test": {
      "dependsOn": [
        "^test"
      ],
      "inputs": [
        "default",
        "^default",
        "{workspaceRoot}/bunfig.toml"
      ],
      "outputs": [
        "{projectRoot}/coverage",
        "{projectRoot}/.bun-test-results"
      ],
      "cache": true
    }
  },
  "plugins": [
    {
      "plugin": "@nx/eslint/plugin",
      "options": {
        "targetName": "lint"
      }
    }
  ],
  "nxCloudId": "68ec2392753fa0764f0ee5c3",
  "namedInputs": {
    "sharedGlobals": [
      "{workspaceRoot}/.github/workflows/ci.yml"
    ],
    "default": [
      "sharedGlobals",
      "{projectRoot}/**/*",
      "{workspaceRoot}/package.json",
      "{workspaceRoot}/tsconfig.base.json",
      "{workspaceRoot}/nx.json",
      "{workspaceRoot}/bunfig.toml",
      "{workspaceRoot}/eslint.config.mjs"
    ],
    "source": [
      "sharedGlobals",
      "{projectRoot}/**/*",
      "{workspaceRoot}/package.json",
      "{workspaceRoot}/tsconfig.base.json",
      "{workspaceRoot}/nx.json",
      "{workspaceRoot}/bunfig.toml",
      "{workspaceRoot}/eslint.config.mjs",
      "!{projectRoot}/**/*.md",
      "!{projectRoot}/docs/**/*",
      "!{projectRoot}/tests/**/*",
      "!{projectRoot}/**/*.test.*",
      "!{projectRoot}/**/*.spec.*"
    ],
    "productionBuild": [
      "sharedGlobals",
      "{projectRoot}/src/**/*",
      "{projectRoot}/package.json",
      "{projectRoot}/tsconfig.json",
      "{workspaceRoot}/package.json",
      "{workspaceRoot}/tsconfig.base.json",
      "{workspaceRoot}/nx.json",
      "{workspaceRoot}/bunfig.toml",
      "{workspaceRoot}/eslint.config.mjs",
      "!{projectRoot}/**/*.test.{js,ts,jsx,tsx}",
      "!{projectRoot}/**/*.spec.{js,ts,jsx,tsx}",
      "!{projectRoot}/tests/**/*",
      "!{projectRoot}/**/*.md",
      "!{projectRoot}/docs/**/*",
      "!{projectRoot}/README.md"
    ]
  }
}
{
  "name": "@wemake.cx/collaborative-reasoning",
  "version": "0.1.5",
  "description": "MCP server for structured multi-persona collaborative reasoning",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/WeMake-AI/mcp.git",
    "directory": "src/collaborative-reasoning"
  },
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/WeMake-AI/mcp/tree/main/src/collaborative-reasoning",
  "author": "heyFlorentin",
  "engines": {
    "bun": ">=1.2.0",
    "node": ">=18.0.0"
  },
  "packageManager": "bun@1.2.0",
  "keywords": [
    "model-context-protocol",
    "collaborative-reasoning"
  ],
  "bin": {
    "mcp-server-collaborative-reasoning": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun build --entrypoints ./src/index.ts --outdir ./dist --format esm --target=bun --sourcemap && (echo '#!/usr/bin/env bun' | cat - dist/index.js > dist/index.tmp && mv dist/index.tmp dist/index.js) && chmod +x dist/*.js",
    "types": "bun tsc",
    "prepare": "bun run types && bun run build",
    "test": "bun test",
    "test:ci": "bun test --reporter=junit --reporter-outfile=test-results.xml --coverage",
    "release": "bun publish --tag latest",
    "watch": "bun tsc --watch"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.4"
  },
  "devDependencies": {
    "@types/node": "^22.17.2",
    "typescript": "^5.9.2"
  }
}

{
  "name": "@wemake.cx/collaborative-reasoning",
  "version": "0.0.2",
  "description": "MCP server for diagrammatic thinking and spatial representation",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/wemake-ai/mcp.git",
    "directory": "src/collaborative-reasoning"
  },
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/wemake-ai/mcp/tree/main/src/collaborative-reasoning",
  "author": "heyFlorentin",
  "engines": {
    "bun": ">=1.2.0"
  },
  "packageManager": "bun@1.2.0",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "thinking",
    "model-enhancement",
    "mcp-server",
    "collaborative-reasoning"
  ],
  "bin": {
    "mcp-server-collaborative-reasoning": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun build --entrypoints ./index.ts --outdir ./dist --format esm --target=bun --sourcemap && shx chmod +x dist/*.js",
    "types": "bun tsc",
    "prepare": "bun run types && bun run build",
    "release": "bun publish",
    "watch": "bun tsc --watch"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.10.2",
    "chalk": "^5.3.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/node": "^22",
    "@types/yargs": "^17.0.32",
    "shx": "^0.3.4",
    "typescript": "^5.3.3"
  }
}

{
  "name": "@wemake.cx/narrative-planner",
  "version": "0.2.4",
  "description": "MCP server that creates simple narrative outlines",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/WeMake-AI/mcp.git",
    "directory": "src/narrative-planner"
  },
  "publishConfig": {
    "access": "public",
    "tag": "alpha"
  },
  "engines": {
    "bun": ">=1.2.0"
  },
  "homepage": "https://github.com/WeMake-AI/mcp/tree/main/src/narrative-planner",
  "author": "heyFlorentin",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "narrative",
    "model-enhancement"
  ],
  "bin": {
    "mcp-server-narrative-planner": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "shx rm -rf dist && bun build ./src/index.ts --outdir='./dist' --target='bun' --sourcemap='linked' && tsc",
    "start": "bun run ./dist/index.js",
    "prepare": "bun run build",
    "watch": "bun build ./src/index.ts --outdir='./dist' --target='bun' --sourcemap='linked' --watch",
    "release": "bun publish"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.4",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@types/node": "^22",
    "shx": "^0.3.4",
    "typescript": "^5.3.3"
  }
}

{
  "name": "@wemake.cx/transaction-manager",
  "version": "0.2.12",
  "description": "MCP meta-server for managing stateful interactions via transaction tokens",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "exports": "./dist/index.js",
  "types": "./dist/types/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/WeMake-AI/mcp.git",
    "directory": "src/transaction-manager"
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "engines": {
    "bun": ">=1.3.0"
  },
  "homepage": "https://github.com/WeMake-AI/mcp/tree/main/src/transaction-manager",
  "author": "heyFlorentin",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "transaction-manager",
    "stateful",
    "redis"
  ],
  "bin": {
    "mcp-server-transaction-manager": "dist/index.js"
  },
  "files": [
    "dist",
    "lib"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "bun build ./src/index.ts --outdir='./dist' --target='bun' --sourcemap='linked' && tsc",
    "start": "bun run ./dist/index.js",
    "prepare": "bun run build",
    "watch": "bun build ./src/index.ts --outdir='./dist' --target='bun' --sourcemap='linked' --watch",
    "publish": "bun publish"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.4",
    "chalk": "^5.3.0",
    "ioredis": "5.7.0",
    "uuid": "11.1.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22",
    "typescript": "^5.3.3"
  }
}

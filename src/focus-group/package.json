{
  "name": "@wemake.cx/focus-group",
  "version": "0.0.1",
  "description": "MCP server for LLM focus groups to analyze and critique other MCP servers",
  "license": "MIT",
  "type": "module",
  "main": "./src/index.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/WeMake-AI/mcp.git",
    "directory": "src/focus-group"
  },
  "publishConfig": {

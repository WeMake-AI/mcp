{
  "name": "mcp",
  "version": "0.0.1",
  "author": "WeMake (https://wemake.cx)",
  "repository": {
    "type": "git",
    "url": "https://github.com/WeMake-AI/mcp.git"
  },
  "bugs": {
    "url": "https://github.com/wemake-ai/mcp/issues"
  },
  "description": "WeMake Model Context Protocol (MCP) servers",
  "homepage": "https://wemake.cx",
  "license": "BUSL-1.1",
  "type": "module",
  "workspaces": [
    "src/*"
  ],
  "private": true,
  "engines": {
    "bun": ">=1.2.0",
    "node": ">=18.0.0"
  },
  "packageManager": "bun@1.2.0",
  "scripts": {
    "start": "bun run --filter='./src/*' start",
    "build": "bun run --filter='./src/*' build",
    "watch": "bun run --filter='./src/*' watch",
    "publish-all": "bun run --filter='./src/*' publish",
    "link-all": "bun link --workspaces",
    "demo": "node src/glass-scrolls/dist/index.js demo",
    "replay": "node src/glass-scrolls/dist/index.js replay",
    "format": "prettier --write . && eslint . --ext .ts,.tsx --fix",
    "prettier": "prettier --check .",
    "lint": "eslint . --ext .ts,.tsx",
    "check": "tsc --noEmit"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.4",
    "@wemake.cx/analogical-reasoning": "workspace:analogical-reasoning",
    "@wemake.cx/bias-detection": "workspace:bias-detection",
    "@wemake.cx/constraint-solver": "workspace:constraint-solver",
    "@wemake.cx/decision-framework": "workspace:decision-framework",
    "@wemake.cx/ethical-reasoning": "workspace:ethical-reasoning",
    "@wemake.cx/focus-group": "workspace:focus-group",
    "@wemake.cx/glass-scrolls": "workspace:glass-scrolls",
    "@wemake.cx/goal-tracker": "workspace:goal-tracker",
    "@wemake.cx/memory": "workspace:memory",
    "@wemake.cx/metacognitive-monitoring": "workspace:metacognitive-monitoring",
    "@wemake.cx/multimodal-synthesizer": "workspace:multimodal-synthesizer",
    "@wemake.cx/narrative-planner": "workspace:narrative-planner",
    "@wemake.cx/scientific-method": "workspace:scientific-method",
    "@wemake.cx/sequential-thinking": "workspace:sequential-thinking",
    "@wemake.cx/structured-argumentation": "workspace:structured-argumentation",
    "@wemake.cx/transaction-manager": "workspace:transaction-manager",
    "@wemake.cx/visual-reasoning": "workspace:visual-reasoning"
  },
  "devDependencies": {
    "@nx/eslint": "21.4.1",
    "@tsconfig/bun": "^1.0.8",
    "@types/bun": "1.2.21",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^9.34.0",
    "markdownlint": "^0.38.0",
    "nx": "21.4.1",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "prettier": {
    "trailingComma": "none",
    "printWidth": 120,
    "proseWrap": "always",
    "endOfLine": "lf",
    "overrides": [
      {
        "files": [
          ".github/workflows/*.yml"
        ],
        "options": {
          "proseWrap": "never",
          "objectWrap": "collapse"
        }
      }
    ]
  }
}

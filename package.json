{
  "name": "mcp",
  "author": "WeMake (https://wemake.cx)",
  "repository": {
    "type": "git",
    "url": "https://github.com/WeMake-AI/mcp.git"
  },
  "bugs": {
    "url": "https://github.com/WeMake-AI/mcp/issues"
  },
  "description": "WeMake Model Context Protocol (MCP) servers",
  "homepage": "https://wemake.cx",
  "license": "BUSL-1.1",
  "type": "module",
  "workspaces": [
    "src/*"
  ],
  "private": true,
  "engines": {
    "bun": ">=1.2.0",
    "node": ">=20.0.0"
  },
  "packageManager": "bun@1.2.0",
  "scripts": {
    "start": "bun run --filter='./src/*' start",
    "build-all": "bun run --filter='./src/*' build",
    "watch": "bun run --filter='./src/*' watch",
    "publish-all": "bun run --filter='./src/*' publish",
    "link-all": "bun link --workspaces",
    "format": "prettier --write . && eslint . --ext .ts,.tsx --fix",
    "prettier": "prettier --check .",
    "lint": "eslint . --ext .ts,.tsx",
    "check": "tsc --noEmit",
    "cleanup": "find . -name 'node_modules' -type d -exec rm -rf {} + 2>/dev/null || true && find . -name 'dist' -type d -exec rm -rf {} + 2>/dev/null || true",
    "test": "bun test",
    "test:unit": "bun test --name-pattern='*.unit.*'",
    "test:integration": "bun test --name-pattern='*.integration.*'",
    "test:e2e": "bun test --name-pattern='*.e2e.*'",
    "test:performance": "bun run test:perf",
    "test:security": "bun run security:scan",
    "test:coverage": "bun test --coverage",
    "test:ci": "bun test --reporter=junit --reporter-outfile=test-results.xml --coverage --bail=false",
    "test:watch": "bun test --watch",
    "test:debug": "bun test --inspect",
    "test:perf": "bun run benchmark && bun run load-test",
    "security:scan": "bun run audit && bun run snyk-test && bun run license-check",
    "audit": "bun audit --audit-level moderate",
    "license-check": "license-checker --onlyAllow 'Unlicense;MIT;Apache-2.0;BSD-3-Clause;0BSD;BSD-2-Clause;BSD*;ISC;Python-2.0;CC-BY-4.0;CC-BY-3.0;CC0-1.0'",
    "benchmark": "bun run scripts/benchmark.ts",
    "load-test": "bun run scripts/load-test.ts",
    "test:self-heal": "bun run scripts/self-heal.ts",
    "test:report": "bun run scripts/generate-report.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.18.0"
  },
  "devDependencies": {
    "0x": "6.0.0",
    "@nx/eslint": "21.5.2",
    "@tsconfig/bun": "1.0.8",
    "@types/bun": "1.2.21",
    "@typescript-eslint/eslint-plugin": "8.43.0",
    "@typescript-eslint/parser": "8.43.0",
    "autocannon": "8.0.0",
    "clinic": "13.0.0",
    "eslint": "9.35.0",
    "license-checker": "25.0.1",
    "markdownlint": "0.38.0",
    "nx": "21.5.2",
    "prettier": "3.6.2",
    "typescript": "5.9.2",
    "vite-tsconfig-paths": "5.1.4"
  },
  "prettier": {
    "trailingComma": "none",
    "printWidth": 120,
    "proseWrap": "always",
    "endOfLine": "lf",
    "overrides": [
      {
        "files": [
          ".github/workflows/*.yml"
        ],
        "options": {
          "proseWrap": "never",
          "objectWrap": "collapse"
        }
      }
    ]
  }
}

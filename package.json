{
  "name": "@wemake-ai/mcp",
  "author": "WeMake (https://wemake.cx)",
  "bugs": "https://github.com/WeMake-ai/mcp/issues",
  "description": "WeMake Model Context Protocol (MCP) servers",
  "homepage": "https://wemake.cx",
  "license": "BSL-1.1",
  "type": "module",
  "workspaces": [
    "src/*"
  ],
  "private": true,
  "scripts": {
    "build-all": "bun run --filter='./src/*' build",
    "publish-all": "bun run --filter='./src/*' publish-now",
    "format": "prettier --write . && eslint . --ext .ts,.tsx --fix",
    "prettier": "prettier .",
    "lint": "eslint . --ext .ts,.tsx",
    "check": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.33.0",
    "markdownlint": "^0.38.0",
    "prettier": "^3.6.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "nx": "21.3.7",
    "@nx/eslint": "21.3.7"
  },
  "peerDependencies": {
    "typescript": "^5.8.3"
  },
  "prettier": {
    "trailingComma": "none",
    "printWidth": 120,
    "proseWrap": "always",
    "endOfLine": "lf",
    "overrides": [
      {
        "files": [
          ".github/workflows/*.yml"
        ],
        "options": {
          "proseWrap": "never",
          "objectWrap": "collapse"
        }
      }
    ]
  }
}
